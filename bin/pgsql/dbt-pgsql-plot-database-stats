"""
This script assumes the output is in this format:

SELECT TRANSACTION_TIMESTAMP(), datname, numbackends, xact_commit,
       xact_rollback, blks_read, blks_hit
FROM pg_stat_database
"""

import sys
from os import makedirs, system
from os.path import exists, realpath

if len(sys.argv) != 4:
    print 'usage: %s <filename> <dbname> <outputdirectory>' % sys.argv[0]
    print
    print '    <filename> - full path to the datafile file'
    print '    <dbname> - name of database to plot stats for'
    print '    <output directory> - location to write output files'
    print
    print 'Will attempt to create <output directory> if it does not exist.'
    exit(1)

infilename = sys.argv[1]
dbname = sys.argv[2]
outputdir = sys.argv[3]

# Make sure we can oping the file to read in data.
try:
    f = open(infilename, 'r')
except:
    print 'cannot open file: %s' % infilename
    exit(1)

# Make sure we can open the files to write to.

if not exists(outputdir):
    try:
        makedirs(outputdir)
    except:
        print 'cannot create directory "%s"' % outputdir
        exit(2)

outputdir = realpath(outputdir)

datafilename = 'db-stats-%s.data' % dbname
try:
    d = open(outputdir + '/' + datafilename, 'w')
except:
    print 'cannot open file to write: %s/%s' % (outputdir, datafilename)
    exit(3)
    
rfilename = 'db-stats-%s.r' % dbname
try:
    r = open(outputdir + '/' + rfilename, 'w')
except:
    print 'cannot open file to write: %s/%s' % (outputdir, rfilename)
    exit(4)

# Read in the data and write out the datafile for R.

counter = 0

numbackends = None
xact_commit_old = None
xact_rollback_old = None
blks_read_old = None
blks_hit_old = None
# The following are for versions 8.3 and newer.
tup_returned_old = None
tup_fetched_old = None
tup_inserted_old = None
tup_updated_old = None
tup_deleted_old = None


xact_commit_new = None
xact_rollback_new = None
blks_read_new = None
blks_hit_new = None
# The following are for versions 8.3 and newer.
tup_returned_new = None
tup_fetched_new = None
tup_inserted_new = None
tup_updated_new = None
tup_deleted_new = None

pg_version = 8.2
for line in f:
    c = line.strip().split('|')

    if len(c) != 7 and len(c) != 12:
        continue

    if c[1] != dbname:
        continue

    numbackends = long(c[2])
    xact_commit_new = long(c[3])
    xact_rollback_new = long(c[4])
    blks_read_new = long(c[5])
    blks_hit_new = long(c[6])
    if (len(c) == 12):
        pg_version = 8.3
        tup_returned_new = long(c[6])
        tup_fetched_new = long(c[7])
        tup_inserted_new = long(c[8])
        tup_updated_new = long(c[9])
        tup_deleted_new = long(c[10])

    try:
        if (len(c) == 7):
            d.write('%d %d %d %d %d %d\n' % (counter,
                    numbackends,
                    xact_commit_new - xact_commit_old,
                    xact_rollback_new - xact_rollback_old,
                    blks_read_new - blks_read_old,
                    blks_hit_new - blks_hit_old))
        elif (len(c) == 12):
            d.write('%d %d %d %d %d %d %d %d %d %d %d\n' % (counter,
                    numbackends,
                    xact_commit_new - xact_commit_old,
                    xact_rollback_new - xact_rollback_old,
                    blks_read_new - blks_read_old,
                    blks_hit_new - blks_hit_old,
                    tup_returned_new - tup_returned_old,
                    tup_fetched_new - tup_fetched_old,
                    tup_inserted_new- tup_inserted_old,
                    tup_updated_new - tup_updated_old,
                    tup_deleted_new - tup_deleted_old))
    except:
        # Instead of checking if the old values have been set, just trap for a
        # math error and don't do anything.
        pass

    xact_commit_old = xact_commit_new
    xact_rollback_old = xact_rollback_new
    blks_read_old = blks_read_new
    blks_hit_old = blks_hit_new
    if (len(c) == 12):
        tup_returned_old = tup_returned_new
        tup_fetched_old = tup_fetched_new
        tup_inserted_old = tup_inserted_new
        tup_updated_old = tup_updated_new
        tup_deleted_old = tup_deleted_new

    counter += 1

f.close()
d.close()

# Create the R file.
r.write('d <- read.table("%s", header = FALSE)\n' % datafilename)
r.write('\n')
r.write('bitmap("db-stats-%s-connections.png",\n' % dbname)
r.write('       type = "png16m",\n')
r.write('       units = "px",\n')
r.write('       width = 1280,\n')
r.write('       height = 800,\n')
r.write('       res = 150,\n')
r.write('       taa = 4,\n')
r.write('       gaa = 4)\n')
r.write('xmax = max(d$V1)\n')
r.write('ymax = max(d$V2)\n')
r.write('plot(d$V1,\n')
r.write('     d$V2,\n')
r.write('     xlim = c(0, xmax),\n')
r.write('     ylim = c(0, ymax),\n')
r.write('     type = "b",\n')
r.write('     main = "Database Connections (%s)",\n' % dbname)
r.write('     xlab = "Elapsed Time (minutes)",\n')
r.write('     ylab = "Number of Backends")\n')
r.write('grid()\n')
r.write('\n')
r.write('bitmap("db-stats-%s-commits.png",\n' % dbname)
r.write('       type = "png16m",\n')
r.write('       units = "px",\n')
r.write('       width = 1280,\n')
r.write('       height = 800,\n')
r.write('       res = 150,\n')
r.write('       taa = 4,\n')
r.write('       gaa = 4)\n')
r.write('xmax = max(d$V1)\n')
r.write('ymax = max(d$V3)\n')
r.write('plot(d$V1,\n')
r.write('     d$V3,\n')
r.write('     xlim = c(0, xmax),\n')
r.write('     ylim = c(0, ymax),\n')
r.write('     type = "b",\n')
r.write('     main = "Committed Transactions (%s)",\n' % dbname)
r.write('     xlab = "Elapsed Time (minutes)",\n')
r.write('     ylab = "Commits")\n')
r.write('grid()\n')
r.write('\n')
r.write('bitmap("db-stats-%s-rollbacks.png",\n' % dbname)
r.write('       type = "png16m",\n')
r.write('       units = "px",\n')
r.write('       width = 1280,\n')
r.write('       height = 800,\n')
r.write('       res = 150,\n')
r.write('       taa = 4,\n')
r.write('       gaa = 4)\n')
r.write('xmax = max(d$V1)\n')
r.write('ymax = max(d$V4)\n')
r.write('plot(d$V1,\n')
r.write('     d$V4,\n')
r.write('     xlim = c(0, xmax),\n')
r.write('     ylim = c(0, ymax),\n')
r.write('     type = "b",\n')
r.write('     main = "Rolledback Transactions (%s)",\n' % dbname)
r.write('     xlab = "Elapsed Time (minutes)",\n')
r.write('     ylab = "Rollbacks")\n')
r.write('grid()\n')
r.write('\n')
r.write('bitmap("db-stats-%s-blocks-read.png",\n' % dbname)
r.write('       type = "png16m",\n')
r.write('       units = "px",\n')
r.write('       width = 1280,\n')
r.write('       height = 800,\n')
r.write('       res = 150,\n')
r.write('       taa = 4,\n')
r.write('       gaa = 4)\n')
r.write('xmax = max(d$V1)\n')
r.write('ymax = max(d$V5)\n')
r.write('plot(d$V1,\n')
r.write('     d$V5,\n')
r.write('     xlim = c(0, xmax),\n')
r.write('     ylim = c(0, ymax),\n')
r.write('     type = "b",\n')
r.write('     main = "Blocks Read (%s)",\n' % dbname)
r.write('     xlab = "Elapsed Time (minutes)",\n')
r.write('     ylab = "Blocks")\n')
r.write('grid()\n')
r.write('\n')
r.write('bitmap("db-stats-%s-blocks-hit.png",\n' % dbname)
r.write('       type = "png16m",\n')
r.write('       units = "px",\n')
r.write('       width = 1280,\n')
r.write('       height = 800,\n')
r.write('       res = 150,\n')
r.write('       taa = 4,\n')
r.write('       gaa = 4)\n')
r.write('xmax = max(d$V1)\n')
r.write('ymax = max(d$V6)\n')
r.write('plot(d$V1,\n')
r.write('     d$V6,\n')
r.write('     xlim = c(0, xmax),\n')
r.write('     ylim = c(0, ymax),\n')
r.write('     type = "b",\n')
r.write('     main = "Blocks Hit (%s)",\n' % dbname)
r.write('     xlab = "Elapsed Time (minutes)",\n')
r.write('     ylab = "Blocks")\n')
r.write('grid()\n')
if pg_version >= 8.3:
    r.write('\n')
    r.write('bitmap("db-stats-%s-tup_returned.png",\n' % dbname)
    r.write('       type = "png16m",\n')
    r.write('       units = "px",\n')
    r.write('       width = 1280,\n')
    r.write('       height = 800,\n')
    r.write('       res = 150,\n')
    r.write('       taa = 4,\n')
    r.write('       gaa = 4)\n')
    r.write('xmax = max(d$V1)\n')
    r.write('ymax = max(d$V7)\n')
    r.write('plot(d$V1,\n')
    r.write('     d$V7,\n')
    r.write('     xlim = c(0, xmax),\n')
    r.write('     ylim = c(0, ymax),\n')
    r.write('     type = "b",\n')
    r.write('     main = "Tuples Returned (%s)",\n' % dbname)
    r.write('     xlab = "Elapsed Time (minutes)",\n')
    r.write('     ylab = "Tuples")\n')
    r.write('grid()\n')
    r.write('\n')
    r.write('bitmap("db-stats-%s-tup_fetched.png",\n' % dbname)
    r.write('       type = "png16m",\n')
    r.write('       units = "px",\n')
    r.write('       width = 1280,\n')
    r.write('       height = 800,\n')
    r.write('       res = 150,\n')
    r.write('       taa = 4,\n')
    r.write('       gaa = 4)\n')
    r.write('xmax = max(d$V1)\n')
    r.write('ymax = max(d$V8)\n')
    r.write('plot(d$V1,\n')
    r.write('     d$V8,\n')
    r.write('     xlim = c(0, xmax),\n')
    r.write('     ylim = c(0, ymax),\n')
    r.write('     type = "b",\n')
    r.write('     main = "Tuples Fetched (%s)",\n' % dbname)
    r.write('     xlab = "Elapsed Time (minutes)",\n')
    r.write('     ylab = "Tuples")\n')
    r.write('grid()\n')
    r.write('\n')
    r.write('bitmap("db-stats-%s-tup_inserted.png",\n' % dbname)
    r.write('       type = "png16m",\n')
    r.write('       units = "px",\n')
    r.write('       width = 1280,\n')
    r.write('       height = 800,\n')
    r.write('       res = 150,\n')
    r.write('       taa = 4,\n')
    r.write('       gaa = 4)\n')
    r.write('xmax = max(d$V1)\n')
    r.write('ymax = max(d$V9)\n')
    r.write('plot(d$V1,\n')
    r.write('     d$V9,\n')
    r.write('     xlim = c(0, xmax),\n')
    r.write('     ylim = c(0, ymax),\n')
    r.write('     type = "b",\n')
    r.write('     main = "Tuples Inserted (%s)",\n' % dbname)
    r.write('     xlab = "Elapsed Time (minutes)",\n')
    r.write('     ylab = "Tuples")\n')
    r.write('grid()\n')
    r.write('\n')
    r.write('bitmap("db-stats-%s-tup_updated.png",\n' % dbname)
    r.write('       type = "png16m",\n')
    r.write('       units = "px",\n')
    r.write('       width = 1280,\n')
    r.write('       height = 800,\n')
    r.write('       res = 150,\n')
    r.write('       taa = 4,\n')
    r.write('       gaa = 4)\n')
    r.write('xmax = max(d$V1)\n')
    r.write('ymax = max(d$V10)\n')
    r.write('plot(d$V1,\n')
    r.write('     d$V10,\n')
    r.write('     xlim = c(0, xmax),\n')
    r.write('     ylim = c(0, ymax),\n')
    r.write('     type = "b",\n')
    r.write('     main = "Tuples Updated (%s)",\n' % dbname)
    r.write('     xlab = "Elapsed Time (minutes)",\n')
    r.write('     ylab = "Tuples")\n')
    r.write('grid()\n')
    r.write('\n')
    r.write('bitmap("db-stats-%s-type_deleted.png",\n' % dbname)
    r.write('       type = "png16m",\n')
    r.write('       units = "px",\n')
    r.write('       width = 1280,\n')
    r.write('       height = 800,\n')
    r.write('       res = 150,\n')
    r.write('       taa = 4,\n')
    r.write('       gaa = 4)\n')
    r.write('xmax = max(d$V1)\n')
    r.write('ymax = max(d$V11)\n')
    r.write('plot(d$V1,\n')
    r.write('     d$V11,\n')
    r.write('     xlim = c(0, xmax),\n')
    r.write('     ylim = c(0, ymax),\n')
    r.write('     type = "b",\n')
    r.write('     main = "Tuples Deleted (%s)",\n' % dbname)
    r.write('     xlab = "Elapsed Time (minutes)",\n')
    r.write('     ylab = "Tuples")\n')
    r.write('grid()\n')
r.close()

system('(cd %s && R --slave --no-save < %s)' % (outputdir, rfilename))
